# Orange Car Rental - Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# E2E Test Configuration
# ============================================

# Base URL for E2E tests
BASE_URL=http://localhost:4200

# Test User Credentials (Keycloak)
TEST_CUSTOMER_USERNAME=test-customer@example.com
TEST_CUSTOMER_PASSWORD=Test123!
TEST_AGENT_USERNAME=test-agent@example.com
TEST_AGENT_PASSWORD=Test123!

# Test Data
TEST_RESERVATION_ID=123e4567-e89b-12d3-a456-426614174000
TEST_GUEST_EMAIL=guest@example.com

# ============================================
# Backend Configuration (Optional)
# ============================================

# Database Connection String
# ConnectionStrings__DefaultConnection=Host=localhost;Database=orange_car_rental;Username=postgres;Password=postgres

# Keycloak Settings
# Keycloak__Authority=http://localhost:8080/realms/orange-car-rental
# Keycloak__Audience=orange-car-rental-api

# ============================================
# Deployment Configuration (CI/CD)
# ============================================

# These should be set as GitHub Secrets, not in .env
# KUBE_CONFIG_STAGING=<base64-encoded-kubeconfig>
# KUBE_CONFIG_PRODUCTION=<base64-encoded-kubeconfig>
# SLACK_WEBHOOK=<slack-webhook-url>

# ============================================
# Development Settings
# ============================================

# API Endpoints
API_URL=http://localhost:5000/api
PUBLIC_PORTAL_URL=http://localhost:4200
CALL_CENTER_PORTAL_URL=http://localhost:4201

# Logging
LOG_LEVEL=debug

# ============================================
# Notes
# ============================================
#
# 1. NEVER commit the .env file to git
# 2. Use this .env.example as a template
# 3. For CI/CD, use GitHub Secrets instead of .env
# 4. Update .env.example when adding new variables
