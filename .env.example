# Orange Car Rental - Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# E2E Test Configuration
# ============================================

# Base URL for E2E tests
BASE_URL=http://localhost:4300

# Test User Credentials (Keycloak)
TEST_CUSTOMER_USERNAME=test-customer@example.com
TEST_CUSTOMER_PASSWORD=Test123!
TEST_AGENT_USERNAME=test-agent@example.com
TEST_AGENT_PASSWORD=Test123!

# Test Data
TEST_RESERVATION_ID=123e4567-e89b-12d3-a456-426614174000
TEST_GUEST_EMAIL=guest@example.com

# ============================================
# Backend Configuration (12-Factor Compliant)
# ============================================

# SQL Server (used by Aspire for all microservices)
SQL_SA_PASSWORD=YourStrong@Passw0rd

# Keycloak Admin (for container)
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Keycloak Configuration (for all APIs)
Authentication__Keycloak__Authority=http://localhost:8080/realms/orange-car-rental
Authentication__Keycloak__Audience=orange-car-rental-api
Authentication__Keycloak__RequireHttpsMetadata=false
Authentication__Keycloak__ValidateIssuer=true
Authentication__Keycloak__ValidateAudience=true

# Database Connection Strings (Aspire auto-injects these - only needed for non-Aspire deployments)
# ConnectionStrings__fleet=Server=localhost,1433;Database=OrangeCarRental_Fleet;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=true
# ConnectionStrings__reservations=Server=localhost,1433;Database=OrangeCarRental_Reservations;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=true
# ConnectionStrings__pricing=Server=localhost,1433;Database=OrangeCarRental_Pricing;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=true
# ConnectionStrings__customers=Server=localhost,1433;Database=OrangeCarRental_Customers;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=true

# Service URLs (Aspire auto-configures these - only needed for API Gateway in non-Aspire scenarios)
# FLEET_API_URL=http://fleet-api
# RESERVATIONS_API_URL=http://reservations-api
# PRICING_API_URL=http://pricing-api
# CUSTOMERS_API_URL=http://customers-api

# CORS Origins (comma-separated, adjust per environment)
Cors__AllowedOrigins__0=http://localhost:4300
Cors__AllowedOrigins__1=http://localhost:4301
Cors__AllowedOrigins__2=http://localhost:4302

# Logging Level (Information, Warning, Error, Debug)
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft__AspNetCore=Warning

# ============================================
# Deployment Configuration (CI/CD)
# ============================================

# These should be set as GitHub Secrets, not in .env
# KUBE_CONFIG_STAGING=<base64-encoded-kubeconfig>
# KUBE_CONFIG_PRODUCTION=<base64-encoded-kubeconfig>
# SLACK_WEBHOOK=<slack-webhook-url>

# ============================================
# Development Settings
# ============================================

# API Endpoints
API_URL=http://localhost:5000/api
SHELL_URL=http://localhost:4300
PUBLIC_PORTAL_URL=http://localhost:4301
CALL_CENTER_PORTAL_URL=http://localhost:4302

# Logging
LOG_LEVEL=debug

# ============================================
# Notes
# ============================================
#
# 1. NEVER commit the .env file to git
# 2. Use this .env.example as a template
# 3. For CI/CD, use GitHub Secrets instead of .env
# 4. Update .env.example when adding new variables
