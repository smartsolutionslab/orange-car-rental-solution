{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  // YARP Reverse Proxy Configuration
  // Cluster destination URLs are injected via environment variables (12-Factor compliance)
  // Aspire automatically sets these in Program.cs via:
  //   FLEET_API_URL, RESERVATIONS_API_URL, PRICING_API_URL, CUSTOMERS_API_URL
  //
  // For non-Aspire deployments, set environment variables:
  //   FLEET_API_URL=http://fleet-service:8080
  //   RESERVATIONS_API_URL=http://reservations-service:8080
  //   etc.
  "ReverseProxy": {
    "Routes": {
      "fleet-vehicles-route": {
        "ClusterId": "fleet-cluster",
        "Match": {
          "Path": "/api/vehicles/{**catch-all}"
        }
      },
      "reservations-route": {
        "ClusterId": "reservations-cluster",
        "Match": {
          "Path": "/api/reservations/{**catch-all}"
        }
      },
      "pricing-route": {
        "ClusterId": "pricing-cluster",
        "Match": {
          "Path": "/api/pricing/{**catch-all}"
        }
      },
      "customers-route": {
        "ClusterId": "customers-cluster",
        "Match": {
          "Path": "/api/customers/{**catch-all}"
        }
      },
      "payments-route": {
        "ClusterId": "payments-cluster",
        "Match": {
          "Path": "/api/payments/{**catch-all}"
        }
      },
      "notifications-route": {
        "ClusterId": "notifications-cluster",
        "Match": {
          "Path": "/api/notifications/{**catch-all}"
        }
      },
      "locations-route": {
        "ClusterId": "locations-cluster",
        "Match": {
          "Path": "/api/locations/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "fleet-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "WILL_BE_OVERRIDDEN_BY_ENV_VAR"
          }
        }
      },
      "reservations-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "WILL_BE_OVERRIDDEN_BY_ENV_VAR"
          }
        }
      },
      "pricing-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "WILL_BE_OVERRIDDEN_BY_ENV_VAR"
          }
        }
      },
      "customers-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "WILL_BE_OVERRIDDEN_BY_ENV_VAR"
          }
        }
      },
      "payments-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "WILL_BE_OVERRIDDEN_BY_ENV_VAR"
          }
        }
      },
      "notifications-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "WILL_BE_OVERRIDDEN_BY_ENV_VAR"
          }
        }
      },
      "locations-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "WILL_BE_OVERRIDDEN_BY_ENV_VAR"
          }
        }
      }
    }
  }
}
