<Project>
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    <LangVersion>14</LangVersion>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <NoWarn>$(NoWarn);CA1014</NoWarn>
    <AssemblyName>$(MSBuildProjectName)</AssemblyName>
    <RootNamespace>SmartSolutionsLab.$(AssemblyName)</RootNamespace>
    <Company>Smart Solutions Lab</Company>
    <Product>Orange Car Rental System</Product>
    <Copyright>Copyright Â© 2025 Smart Solutions Lab</Copyright>

    <!-- Versioning - Uses GitVersion in CI, defaults for local development -->
    <Version Condition="'$(GITVERSION_SEMVER)' != ''">$(GITVERSION_SEMVER)</Version>
    <Version Condition="'$(GITVERSION_SEMVER)' == ''">1.0.0-local</Version>
    <AssemblyVersion Condition="'$(GITVERSION_ASSEMBLYSEMVER)' != ''">$(GITVERSION_ASSEMBLYSEMVER)</AssemblyVersion>
    <AssemblyVersion Condition="'$(GITVERSION_ASSEMBLYSEMVER)' == ''">1.0.0.0</AssemblyVersion>
    <FileVersion Condition="'$(GITVERSION_ASSEMBLYSEMFILEVER)' != ''">$(GITVERSION_ASSEMBLYSEMFILEVER)</FileVersion>
    <FileVersion Condition="'$(GITVERSION_ASSEMBLYSEMFILEVER)' == ''">1.0.0.0</FileVersion>
    <InformationalVersion Condition="'$(GITVERSION_INFORMATIONALVERSION)' != ''">$(GITVERSION_INFORMATIONALVERSION)</InformationalVersion>

    <!-- Build Output -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);CS1591</NoWarn> <!-- Missing XML comment -->
  </PropertyGroup>

  <!-- Enable Central Package Management -->
  <PropertyGroup>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
  </PropertyGroup>

  <!-- Enable NuGet Lock Files for Deterministic Builds (12-Factor App - Factor 2) -->
  <PropertyGroup>
    <!-- Generate packages.lock.json for reproducible builds -->
    <RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>

    <!-- In CI environments, use locked mode to ensure exact versions -->
    <!-- This will fail the build if packages.lock.json is out of sync -->
    <RestoreLockedMode Condition="'$(CI)' == 'true'">true</RestoreLockedMode>

    <!-- Lock file path -->
    <NuGetLockFilePath>$(MSBuildProjectDirectory)\packages.lock.json</NuGetLockFilePath>
  </PropertyGroup>

  <!-- Analyzer Configuration -->
  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
