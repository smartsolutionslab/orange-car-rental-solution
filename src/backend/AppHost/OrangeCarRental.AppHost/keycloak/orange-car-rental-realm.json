      "email": "callcenter@test.example.com",
      "firstName": "Test",
      "lastName": "CallCenter",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "test123",
          "temporary": false
        }
      ],
      "realmRoles": ["call_center"]
    },
    {
      "username": "test-fleetmanager",
      "email": "fleetmanager@test.example.com",
