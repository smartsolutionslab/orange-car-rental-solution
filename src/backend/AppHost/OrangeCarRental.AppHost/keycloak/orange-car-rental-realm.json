{
  "realm": "orange-car-rental",
  "enabled": true,
  "sslRequired": "none",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "roles": {
    "realm": [
      {
        "name": "customer",
        "description": "Customer role - can access customer-facing features"
      },
      {
        "name": "call_center",
        "description": "Call Center role - can manage reservations and customers"
      },
      {
        "name": "fleet_manager",
        "description": "Fleet Manager role - can manage vehicles and locations"
      },
      {
        "name": "admin",
        "description": "Admin role - full system access"
      }
    ]
  },
  "clients": [
    {
      "clientId": "orange-car-rental-api",
      "name": "Orange Car Rental API",
      "description": "API client for Orange Car Rental services",
      "enabled": true,
      "publicClient": true,
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "serviceAccountsEnabled": false,
      "protocol": "openid-connect",
      "redirectUris": [
        "http://localhost:*/*",
        "https://localhost:*/*"
      ],
      "webOrigins": [
        "http://localhost:4300",
        "http://localhost:4301",
        "http://localhost:4302",
        "*"
      ],
      "attributes": {
        "access.token.lifespan": "3600",
        "oauth2.device.authorization.grant.enabled": "false",
        "oidc.ciba.grant.enabled": "false"
      },
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "roles",
        "profile",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access",
        "microprofile-jwt"
      ],
      "protocolMappers": [
        {
          "name": "realm-roles-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "multivalued": "true",
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "roles",
            "jsonType.label": "String"
          }
        }
      ]
    },
    {
      "clientId": "orange-car-rental-frontend",
      "name": "Orange Car Rental Frontend",
      "description": "Frontend client for Orange Car Rental portals",
      "enabled": true,
      "publicClient": true,
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "protocol": "openid-connect",
      "redirectUris": [
        "http://localhost:4300/*",
        "http://localhost:4301/*",
        "http://localhost:4302/*"
      ],
      "webOrigins": [
        "http://localhost:4300",
        "http://localhost:4301",
        "http://localhost:4302"
      ],
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "roles",
        "profile",
        "email"
      ],
      "protocolMappers": [
        {
          "name": "realm-roles-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "multivalued": "true",
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "roles",
            "jsonType.label": "String"
          }
        }
      ]
    }
  ],
  "users": [
    {
      "username": "test-customer",
      "email": "customer@test.example.com",
      "firstName": "Test",
      "lastName": "Customer",
