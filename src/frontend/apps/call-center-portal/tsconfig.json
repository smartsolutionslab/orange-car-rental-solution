/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "importHelpers": true,
    "target": "ES2024",
    "module": "preserve",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "@orange-car-rental/util": ["../../libs/util/src/index.ts"],
      "@orange-car-rental/data-access": ["../../libs/data-access/src/index.ts"],
      "@orange-car-rental/ui-components": ["../../libs/ui-components/src/index.ts"],
      "@orange-car-rental/shared-ui": ["../../libs/shared-ui/src/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
